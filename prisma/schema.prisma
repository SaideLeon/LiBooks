// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int             @id @default(autoincrement())
  email           String          @unique
  password        String
  name            String
  avatarUrl       String?
  bio             String?
  posts           CommunityPost[] @relation("UserPosts")
  comments        Comment[]
  readingProgress ReadingProgress[]
  bookmarks       Bookmark[]
  activities      Activity[]
  followers       Follow[]        @relation("Following")
  following       Follow[]        @relation("Follower")
}

model Follow {
  followerId  Int
  follower    User @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  followingId Int
  following   User @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@id([followerId, followingId])
}

model Book {
  id            Int             @id @default(autoincrement())
  title         String
  author        String
  coverUrl      String
  description   String          @db.Text
  preface       String          @db.Text
  chapters      Chapter[]
  progress      ReadingProgress[]
  bookmarks     Bookmark[]
  activities    Activity[]
}

model Chapter {
  id        Int      @id @default(autoincrement())
  title     String
  subtitle  String?
  content   String[]
  bookId    Int
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
}

model CommunityPost {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  quote     String
  comment   String
  bookVerse String
  imageUrl  String?
  likes     Int       @default(0)
  authorId  Int
  author    User      @relation("UserPosts", fields: [authorId], references: [id], onDelete: Cascade)
  comments  Comment[]
}

model Comment {
  id              Int           @id @default(autoincrement())
  createdAt       DateTime      @default(now())
  text            String
  authorId        Int
  user            User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  communityPostId Int
  communityPost   CommunityPost @relation(fields: [communityPostId], references: [id], onDelete: Cascade)
}

model ReadingProgress {
  id             Int      @id @default(autoincrement())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         Int
  book           Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId         Int
  chapterId      Int
  paragraphIndex Int
  updatedAt      DateTime @updatedAt

  @@unique([userId, bookId])
}

model Bookmark {
  id             Int      @id @default(autoincrement())
  userId         Int
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookId         Int
  book           Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  chapterId      Int
  // chapter        Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  paragraphIndex Int
  text           String   @db.Text
  createdAt      DateTime @default(now())

  @@unique([userId, bookId, chapterId, paragraphIndex])
}

model Activity {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  type      String // e.g., 'FINISHED_BOOK', 'ADDED_BOOKMARK', 'STARTED_READING'
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookId    Int?
  book      Book?    @relation(fields: [bookId], references: [id])
  comment   String?
}
