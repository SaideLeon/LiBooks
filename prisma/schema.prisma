// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  name            String
  password        String
  avatarUrl       String?
  bio             String?
  authoredBooks   Book[]   @relation("AuthoredBooks")
  authoredPosts   CommunityPost[] @relation("AuthoredPosts")
  authoredComments Comment[] @relation("AuthoredComments")
  activities      Activity[]
  readingProgress ReadingProgress[]
  bookmarks       Bookmark[]
  followers       Follow[] @relation("Following")
  following       Follow[] @relation("Followers")

  @@map("users")
}

model Book {
  id              Int      @id @default(autoincrement())
  title           String
  description     String
  preface         String
  coverUrl        String
  authorId        Int
  author          User     @relation("AuthoredBooks", fields: [authorId], references: [id])
  chapters        Chapter[]
  activities      Activity[]
  readingProgress ReadingProgress[]
  bookmarks       Bookmark[]

  @@map("books")
}

model Chapter {
  id         Int      @id @default(autoincrement())
  title      String
  subtitle   String
  content    String[]
  bookId     Int
  book       Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@map("chapters")
}

model CommunityPost {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  quote       String
  comment     String
  bookVerse   String
  likes       Int
  imageUrl    String?
  authorId    Int
  author      User      @relation("AuthoredPosts", fields: [authorId], references: [id])
  comments    Comment[]

  @@map("community_posts")
}

model Comment {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())
  text            String
  authorId        Int
  author          User     @relation("AuthoredComments", fields: [authorId], references: [id])
  communityPostId Int
  communityPost   CommunityPost @relation(fields: [communityPostId], references: [id], onDelete: Cascade)

  @@map("comments")
}

model Activity {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  type      String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  bookId    Int?
  book      Book?    @relation(fields: [bookId], references: [id])
  comment   String?

  @@map("activities")
}

model ReadingProgress {
  id             Int      @id @default(autoincrement())
  updatedAt      DateTime @updatedAt
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
  bookId         Int
  book           Book     @relation(fields: [bookId], references: [id])
  chapterId      Int
  paragraphIndex Int

  @@unique([userId, bookId])
  @@map("reading_progress")
}

model Bookmark {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
  bookId         Int
  book           Book     @relation(fields: [bookId], references: [id])
  chapterId      Int
  paragraphIndex Int
  text           String

  @@map("bookmarks")
}

model Follow {
  followerId  Int
  followingId Int
  follower    User @relation("Followers", fields: [followerId], references: [id])
  following   User @relation("Following", fields: [followingId], references: [id])

  @@id([followerId, followingId])
  @@map("follows")
}
