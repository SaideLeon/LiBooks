// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              Int               @id @default(autoincrement())
  email           String            @unique
  name            String
  password        String
  avatarUrl       String?
  bio             String?
  books           Book[]
  posts           CommunityPost[]
  comments        Comment[]
  followers       Follow[]          @relation("Followers")
  following       Follow[]          @relation("Following")
  readingProgress ReadingProgress[]
  bookmarks       Bookmark[]
  activities      Activity[]
}

model Book {
  id              Int               @id @default(autoincrement())
  title           String
  description     String
  preface         String
  coverUrl        String
  author          User              @relation(fields: [authorId], references: [id])
  authorId        Int
  chapters        Chapter[]
  readingProgress ReadingProgress[]
  bookmarks       Bookmark[]
  activities      Activity[]
}

model Chapter {
  id        Int      @id @default(autoincrement())
  title     String
  subtitle  String
  content   String[] @Unsupported("text")
  book      Book     @relation(fields: [bookId], references: [id])
  bookId    Int
}

model CommunityPost {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  quote       String
  comment     String
  bookVerse   String
  imageUrl    String?
  likes       Int       @default(0)
  author      User      @relation(fields: [authorId], references: [id])
  authorId    Int
  comments    Comment[]
}

model Comment {
  id              Int           @id @default(autoincrement())
  createdAt       DateTime      @default(now())
  text            String
  author          User          @relation(fields: [authorId], references: [id])
  authorId        Int
  communityPost   CommunityPost @relation(fields: [communityPostId], references: [id])
  communityPostId Int
}

model Follow {
  follower    User @relation("Followers", fields: [followerId], references: [id])
  followerId  Int
  following   User @relation("Following", fields: [followingId], references: [id])
  followingId Int

  @@id([followerId, followingId])
}

model ReadingProgress {
  id             Int      @id @default(autoincrement())
  user           User     @relation(fields: [userId], references: [id])
  userId         Int
  book           Book     @relation(fields: [bookId], references: [id])
  bookId         Int
  chapterId      Int
  paragraphIndex Int
  updatedAt      DateTime @updatedAt

  @@unique([userId, bookId])
}

model Bookmark {
  id             Int      @id @default(autoincrement())
  user           User     @relation(fields: [userId], references: [id])
  userId         Int
  book           Book     @relation(fields: [bookId], references: [id])
  bookId         Int
  chapterId      Int
  paragraphIndex Int
  text           String
  createdAt      DateTime @default(now())
}

model Activity {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  type      String // e.g., "FINISHED_BOOK", "ADDED_BOOKMARK", "NEW_PUBLICATION"
  book      Book?    @relation(fields: [bookId], references: [id])
  bookId    Int?
  comment   String?
  createdAt DateTime @default(now())
}
