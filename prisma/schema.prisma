// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  name          String
  password      String
  avatarUrl     String?
  bio           String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  posts         CommunityPost[] @relation("UserPosts")
  comments      Comment[]
  followers     Follow[]        @relation("Following")
  following     Follow[]        @relation("Followers")
  authoredBooks Book[]          @relation("AuthoredBy")
  readingProgress ReadingProgress[]
  bookmarks     Bookmark[]
  activities    Activity[]
}

model Book {
  id              Int             @id @default(autoincrement())
  title           String
  authorName      String
  author          User            @relation("AuthoredBy", fields: [authorId], references: [id])
  authorId        Int
  description     String
  coverUrl        String
  preface         String?
  chapters        Chapter[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  readingProgress ReadingProgress[]
  bookmarks       Bookmark[]
  activities      Activity[]      @relation("BookActivities")
}

model Chapter {
  id        Int      @id @default(autoincrement())
  title     String
  subtitle  String?
  rawContent String?
  content   String[]
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId    Int
  order     Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  readingProgress ReadingProgress[]
  bookmarks     Bookmark[]
}

model CommunityPost {
  id          Int       @id @default(autoincrement())
  author      User      @relation("UserPosts", fields: [authorId], references: [id])
  authorId    Int
  bookVerse   String
  quote       String
  comment     String
  imageUrl    String?
  likes       Int       @default(0)
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Comment {
  id            Int           @id @default(autoincrement())
  author        User          @relation(fields: [authorId], references: [id])
  authorId      Int
  post          CommunityPost @relation(fields: [communityPostId], references: [id], onDelete: Cascade)
  communityPostId Int
  text          String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Follow {
  id          Int      @id @default(autoincrement())
  follower    User     @relation("Followers", fields: [followerId], references: [id], onDelete: Cascade)
  followerId  Int
  following   User     @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)
  followingId Int
  createdAt   DateTime @default(now())

  @@unique([followerId, followingId])
}

model ReadingProgress {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId    Int
  chapter   Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  chapterId Int
  paragraphIndex Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, bookId])
}

model Bookmark {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId    Int
  chapter   Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  chapterId Int
  paragraphIndex Int
  text      String
  createdAt DateTime @default(now())
}

model Activity {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  type      String // e.g., "STARTED_READING", "FINISHED_BOOK", "ADDED_BOOKMARK"
  book      Book?    @relation("BookActivities", fields: [bookId], references: [id], onDelete: SetNull)
  bookId    Int?
  comment   String?
  createdAt DateTime @default(now())
}
