// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  name            String
  password        String
  avatarUrl       String?
  bio             String?
  books           Book[]
  posts           CommunityPost[]
  comments        Comment[]
  readingProgress ReadingProgress[]
  bookmarks       Bookmark[]
  followers       Follow[]          @relation("UserFollowers")
  following       Follow[]          @relation("UserFollowing")
  activities      Activity[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Book {
  id            Int      @id @default(autoincrement())
  title         String
  authorId      Int
  author        User     @relation(fields: [authorId], references: [id])
  coverUrl      String
  description   String
  preface       String?
  chapters      Chapter[]
  readingProgress ReadingProgress[]
  bookmarks     Bookmark[]
  activities    Activity[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Chapter {
  id        Int      @id @default(autoincrement())
  title     String
  subtitle  String?
  content   String[]
  bookId    Int
  book      Book     @relation(fields: [bookId], references: [id])
  readingProgress ReadingProgress[]
  bookmarks     Bookmark[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CommunityPost {
  id          Int       @id @default(autoincrement())
  authorId    Int
  author      User      @relation(fields: [authorId], references: [id])
  quote       String
  comment     String
  bookVerse   String
  imageUrl    String?
  likes       Int       @default(0)
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Comment {
  id              Int      @id @default(autoincrement())
  authorId        Int
  author          User     @relation(fields: [authorId], references: [id])
  communityPostId Int
  communityPost   CommunityPost @relation(fields: [communityPostId], references: [id])
  text            String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Follow {
  followerId  Int
  follower    User @relation("UserFollowing", fields: [followerId], references: [id])
  followingId Int
  following   User @relation("UserFollowers", fields: [followingId], references: [id])

  @@id([followerId, followingId])
}

model ReadingProgress {
  id              Int      @id @default(autoincrement())
  user            User     @relation(fields: [userId], references: [id])
  userId          Int
  book            Book     @relation(fields: [bookId], references: [id])
  bookId          Int
  chapter         Chapter  @relation(fields: [chapterId], references: [id])
  chapterId       Int
  paragraphIndex  Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([userId, bookId])
}

model Bookmark {
  id              Int      @id @default(autoincrement())
  user            User     @relation(fields: [userId], references: [id])
  userId          Int
  book            Book     @relation(fields: [bookId], references: [id])
  bookId          Int
  chapter         Chapter  @relation(fields: [chapterId], references: [id])
  chapterId       Int
  paragraphIndex  Int
  text            String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Activity {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  type      String
  book      Book?    @relation(fields: [bookId], references: [id])
  bookId    Int?
  comment   String?
  createdAt DateTime @default(now())
}
