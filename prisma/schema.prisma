
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  name            String
  password        String
  avatarUrl       String?
  bio             String?
  books           Book[]   @relation("AuthoredBooks")
  posts           CommunityPost[] @relation("AuthoredPosts")
  comments        Comment[]
  readingProgress ReadingProgress[]
  bookmarks       Bookmark[]
  activities      Activity[]
  followers       Follow[] @relation("Following")
  following       Follow[] @relation("Followers")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id              Int       @id @default(autoincrement())
  title           String
  description     String
  preface         String?
  coverUrl        String
  authorId        Int
  author          User      @relation("AuthoredBooks", fields: [authorId], references: [id])
  authorName      String
  chapters        Chapter[]
  readingProgress ReadingProgress[]
  bookmarks       Bookmark[]
  activities      Activity[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Chapter {
  id        Int      @id @default(autoincrement())
  title     String
  subtitle  String?
  content   String[]
  bookId    Int
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CommunityPost {
  id        Int       @id @default(autoincrement())
  quote     String
  comment   String
  bookVerse String
  imageUrl  String?
  likes     Int       @default(0)
  authorId  Int
  author    User      @relation("AuthoredPosts", fields: [authorId], references: [id])
  comments  Comment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id              Int      @id @default(autoincrement())
  text            String
  authorId        Int
  author          User     @relation(fields: [authorId], references: [id])
  communityPostId Int
  communityPost   CommunityPost @relation(fields: [communityPostId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Follow {
  followerId  Int
  followingId Int
  follower    User @relation("Followers", fields: [followerId], references: [id])
  following   User @relation("Following", fields: [followingId], references: [id])

  @@id([followerId, followingId])
}

model Activity {
  id        Int      @id @default(autoincrement())
  type      String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  bookId    Int?
  book      Book?    @relation(fields: [bookId], references: [id])
  comment   String?
  
  createdAt DateTime @default(now())
}

model ReadingProgress {
  id             Int      @id @default(autoincrement())
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
  bookId         Int
  book           Book     @relation(fields: [bookId], references: [id])
  chapterId      Int
  paragraphIndex Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, bookId])
}

model Bookmark {
  id             Int      @id @default(autoincrement())
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
  bookId         Int
  book           Book     @relation(fields: [bookId], references: [id])
  chapterId      Int
  paragraphIndex Int
  text           String

  createdAt DateTime @default(now())
}
