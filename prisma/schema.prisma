datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

model User {
  id              Int               @id @default(autoincrement())
  email           String            @unique
  name            String
  password        String
  avatarUrl       String?
  bio             String?
  books           Book[]
  posts           CommunityPost[]
  comments        Comment[]
  activities      Activity[]
  readingProgress ReadingProgress[]
  bookmarks       Bookmark[]
  followedBy      Follow[]          @relation("Followers")
  following       Follow[]          @relation("Following")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id            Int      @id @default(autoincrement())
  title         String
  coverUrl      String
  description   String
  preface       String
  authorId      Int
  author        User     @relation(fields: [authorId], references: [id])
  chapters      Chapter[]
  activities    Activity[]
  readingProgress ReadingProgress[]
  bookmarks     Bookmark[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Chapter {
  id        Int      @id @default(autoincrement())
  title     String
  subtitle  String?
  content   String[]
  bookId    Int
  book      Book     @relation(fields: [bookId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CommunityPost {
  id        Int       @id @default(autoincrement())
  authorId  Int
  author    User      @relation(fields: [authorId], references: [id])
  quote     String
  comment   String
  bookVerse String
  imageUrl  String?
  likes     Int       @default(0)
  comments  Comment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id              Int      @id @default(autoincrement())
  text            String
  userId          Int
  user            User     @relation(fields: [userId], references: [id])
  communityPostId Int
  communityPost   CommunityPost @relation(fields: [communityPostId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Activity {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  type      String
  bookId    Int?
  book      Book?    @relation(fields: [bookId], references: [id])
  comment   String?
  createdAt DateTime @default(now())
}

model Follow {
  followerId  Int
  follower    User @relation("Following", fields: [followerId], references: [id])
  followingId Int
  following   User @relation("Followers", fields: [followingId], references: [id])

  @@id([followerId, followingId])
}

model ReadingProgress {
  id             Int      @id @default(autoincrement())
  userId         Int
  bookId         Int
  chapterId      Int
  paragraphIndex Int
  user           User     @relation(fields: [userId], references: [id])
  book           Book     @relation(fields: [bookId], references: [id])

  @@unique([userId, bookId])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Bookmark {
  id             Int      @id @default(autoincrement())
  userId         Int
  bookId         Int
  chapterId      Int
  paragraphIndex Int
  text           String
  user           User     @relation(fields: [userId], references: [id])
  book           Book     @relation(fields: [bookId], references: [id])
  createdAt      DateTime @default(now())
}
